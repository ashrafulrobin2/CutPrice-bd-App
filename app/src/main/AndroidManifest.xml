<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eomsbd.cutprice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cutpricelogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cutpricelogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Test_Activity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShoppingActivity"></activity>
        <activity
            android:name=".ProductActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CheckoutActivity" />
        <activity android:name=".PaymentsActivity" />
        <activity android:name=".PayPalCheckoutActivity" />
        <activity
            android:name=".OrderNowActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".SettingsPrefActivity"></activity>
    </application>

</manifest>