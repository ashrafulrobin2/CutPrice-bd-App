<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eomsbd.cutprice"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cutpricelogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cutpricelogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.RegistrationActivity" />
        <activity android:name=".activity.SubCategoryActivity" />
        <activity android:name=".activity.Test_Activity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".activity.ShoppingActivity" />
        <activity
            android:name=".activity.ProductActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.CheckoutActivity" />
        <activity android:name=".activity.PaymentsActivity" />
        <activity android:name=".activity.PayPalCheckoutActivity" />
        <activity
            android:name=".activity.OrderNowActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.SettingsPrefActivity" />
    </application>

</manifest>